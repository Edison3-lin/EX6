<!DOCTYPE html>

<html>
<head>
    <title>第一頁</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/test.css">
    <script src="~/Scripts/vue.js"></script>    
</head>
<body>
  <div id="myApp">
    <div v-bind:class="{MyTest:isActive}">林宏斌</div>
    <div :class="{MyTest:isActive}">屏東縣</div>
    <button v-on:click="btnClick">Toggle套入樣式</button>
  </div>
   
<script>
var myApp = new Vue({
  el:'#myApp',
  data:{
    isActive:true
  },  
  methods:{
    btnClick:function(){
      this.isActive = !this.isActive;
    },
  },
});
</script>


</body>    

</html>