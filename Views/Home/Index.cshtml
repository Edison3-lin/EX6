    <script>
    $(document).ready(function()
    {
      $("input").focus(function(){
        $(this).css("background-color","gray");
      });
      $("input").blur(function(){
        $(this).css("background-color","green");
      });
        
      $("button").mouseenter(function()
      {
        $("button").css("background-color","yellow");
      });

      $("button").mouseleave(function()
      {
        $("button").css("background-color","lightgray");
      });
        
      $("form").submit(function()
      {
        if(@ViewBag.Page == "2") alert("確認?"); 
      });
      $("button").click(function()
      {
        $("form").submit();        
      });    
    });
    </script>

    <style>
        label {
            display: inline-block;
            width: 5em;
        }
    </style>
</head>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.WORK_NAME)</th>            
        <th>@Html.DisplayNameFor(model => model.BU_ID)</th>            
        <th>@Html.DisplayNameFor(model => model.Gender)</th>            
    </tr>
</table>
    
@using (Html.BeginForm())
{
<body>
    <form action="">
        <div class="hero">
            <h2>和碩聯合科技員工</h2>
            <div class="MyTitleStyle">
                <p>
                    <a title="輸入名字" style="color:DarkRed">@ViewBag.name</a>

                    @Html.Partial("_Name")
                    <!--顯示部門的DropDownList-->
                <p>
                    <a title="選擇部門" style="color:Black">@ViewBag.department</a>
                    @Html.DropDownListFor(model => model.BU_ID, BU, new { style="background-color:green;width:280px;height:36px;font-size:18px;color:Black", @class = "form-control" } )   
                    <br>
                    @ViewBag.BU                   
                    <br>
                    
                    <!--輸入性別的RadioButton-->
                    @Html.Partial("_Sex")

                    
            </div>
        </div>
    </form>
    
        @if (ViewBag.Page == 1)
        { <button>下一步</button> }
        else if (ViewBag.Page == 2)
        { <button>確認</button> }


</body>
}
</html>