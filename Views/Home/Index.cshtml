@using (Html.BeginForm())
{
<body>
    <form action="">
        <div class="hero">
            <h2>和碩聯合科技員工</h2>
            <div class="MyTitleStyle">
                <p>
                    <a title="輸入名字" style="color:DarkRed">@ViewBag.name</a>

                    @Html.Action("_Name", "Home", new { id = (int)@ViewBag.Page })

                    <!--顯示部門的DropDownList-->
                <p>
                    <a title="選擇部門" style="color:DarkRed">@ViewBag.department</a>

                    @Html.DropDownList("BU", null, new { size = "1", style = "font-size:20px;background-color:green" })
                    <br>
                    
                    <!--輸入性別的RadioButton-->
                <p>
                    <a title="點選性別" style="color:DarkRed">@ViewBag.sex</a>

                    @if ((ViewBag.Page == 2) && ((string)TempData["eGender"] == "男"))
                    {
                        @:男
                        <input type="radio" name="Gender" value="男" checked disabled>
                        @:女
                        <input type="radio" name="Gender" value="女" disabled>
                        <input type="text" name="xGender" hidden id="Gender2" value="男">                                                  

                    }
                    else if ((ViewBag.Page == 2) && ((string)TempData["eGender"] == "女"))
                    {
                        @:男
                        <input type="radio" name="Gender" value="男" disabled>
                        @:女
                        <input type="radio" name="Gender" value="女" checked disabled>
                        <input type="text" name="xGender" hidden id="Gender2" value="女">                        
                    }
                    else
                    {
                        @:男
                        <input type="radio" name="Gender" value="男" checked>
                        @:女
                        <input type="radio" name="Gender" value="女">
                        <input type="text" name="xGender" hidden id="Gender2" value="xyz">                        
                    }
            </div>
        </div>
    </form>
    
        @if (ViewBag.Page == 1)
        { <button>下一步</button> }
        else if (ViewBag.Page == 2)
        { <button>確認</button> }


</body>
}
